<% include ../partials/header %>
<div class="container">
    <div class="row">
      
        <div class="col-lg" >
                <h1 style="text-align: center">Add New Comment to <%= post.postTitle %></h1>
            <form action="/supportComments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[amount]" placeholder="text">
                </div>

                <div class="form-group ">
                  <label for="image">picture of amount contributed</label>
                  <input type="file" id="image" name="image" required >
              </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/posts">Go Back</a>
        </div>
    </div>
</div>




