</div> 

<hr/>
<div class="container-fluid">
  <div class="row">
     <div class="col">
 <h3>My Profile</h3>
 <h4>Your total post is: <%=posts.length%></h4>
 <hr/>
 <p>First Name: <%=user.firstName%></p>
 <p>Last Name: <%=user.lastName%></p>
 <p>Email: <%=user.email%></p>
 <p>Verified: <%=user.isVerified%></p>
 <p>Date Joined: <%=user.dateJoined%></p>
     </div>
     <hr/>
  </div>

  <h3 class="text-center">My Posts</h3>
  <hr/>



    <div class="container-fluid">
      <div class="row mt-3 text-center">
     <% posts.forEach(function(post){ %>
        <div class="col-lg-4">
            <h4 class="text-center"><em><%=post.postTitle %></em></h4>
<img class='img-thumbnail ' src="<%= post.image %>">

<a href='<%=post.image%>'><%=post.documentTitle%></a>

 <iframe class='img-thumbnail' width="560" height="900" src="https://www.youtube.com/embed/<%=post.videoLink%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
 
                       <hr/>

<p><%=post.description %></p>
     <p>
        <a href="/posts/<%= post._id %>" class="btn btn-primary">More Info</a>
     </p>
            </div>  
        <% }); %>
    </div>
    </div>
      
