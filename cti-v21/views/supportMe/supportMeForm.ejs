        <h3 style="text-align: center">Create a User that need Support</h3>
     
            <form action="/support" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name= 'supportMeUser[username]' placeholder="Username" required>
                </div>

                

                <div class="form-group">
                    <input class="form-control" type="text"  name="supportMeUser[firstname]" placeholder="First name">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="supportMeUser[lastname]" placeholder="Last name" required>
                </div>

             
                <div class="form-group">
                    <label for="image">Upload his/her Image</label>
                    <input type="file" id="image" name="image" required >
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="supportMeUser[description]" placeholder="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn  btn-primary ">Submit!</button>
                </div>
            </form>

