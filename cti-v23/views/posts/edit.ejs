<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%=post.name%> Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/posts/<%=post._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value= '<%=post.name%>''>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value='<%=post.image%>''>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%=post.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/posts">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

